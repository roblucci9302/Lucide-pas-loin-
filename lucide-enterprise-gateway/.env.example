# Lucide Enterprise Gateway Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3002
NODE_ENV=production
API_VERSION=v1

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRY=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_TO_FILE=true
AUDIT_LOG_FILE_PATH=./logs/audit.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Database Connections
# You can configure multiple databases by adding sections like below

# Example: PostgreSQL Production Database
DB_POSTGRES_PROD_TYPE=postgresql
DB_POSTGRES_PROD_HOST=your-postgres-host.com
DB_POSTGRES_PROD_PORT=5432
DB_POSTGRES_PROD_DATABASE=your_database
DB_POSTGRES_PROD_USER=your_username
DB_POSTGRES_PROD_PASSWORD=your_password
DB_POSTGRES_PROD_SSL=true
DB_POSTGRES_PROD_READ_ONLY=true

# Example: MySQL HR Database
DB_MYSQL_HR_TYPE=mysql
DB_MYSQL_HR_HOST=your-mysql-host.com
DB_MYSQL_HR_PORT=3306
DB_MYSQL_HR_DATABASE=hr_database
DB_MYSQL_HR_USER=hr_readonly
DB_MYSQL_HR_PASSWORD=hr_password
DB_MYSQL_HR_READ_ONLY=true

# Example: REST API Endpoint
DB_REST_CRM_TYPE=rest
DB_REST_CRM_BASE_URL=https://api.your-crm.com
DB_REST_CRM_AUTH_TYPE=bearer
DB_REST_CRM_AUTH_TOKEN=your-api-token

# LLM Configuration (for Natural Language to SQL)
LLM_PROVIDER=openai
LLM_API_KEY=your-openai-api-key
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=500

# Security
MAX_QUERY_EXECUTION_TIME_MS=30000
ALLOW_WRITE_QUERIES=false
BLOCK_DANGEROUS_KEYWORDS=true

# Monitoring
ENABLE_PERFORMANCE_METRICS=true
LOG_LEVEL=info
