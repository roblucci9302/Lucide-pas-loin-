{
    "name": "lucide",
    "productName": "Lucide",
    "version": "0.2.4",
    "description": "Lucide - Assistant IA",
    "main": "src/index.js",
    "scripts": {
        "setup": "npm install && cd web && npm install && npm run build && cd .. && npm start",
        "start": "npm run build:renderer && electron .",
        "package": "npm run build:all && electron-builder --dir",
        "make": "npm run build:renderer && electron-forge make",
        "build": "npm run build:all && electron-builder --config electron-builder.yml --publish never",
        "build:win": "npm run build:all && electron-builder --win --x64 --publish never",
        "publish": "npm run build:all && electron-builder --config electron-builder.yml --publish always",
        "lint": "eslint --ext .ts,.tsx,.js .",
        "postinstall": "electron-builder install-app-deps",
        "build:renderer": "node build.js",
        "build:web": "cd web && npm run build && cd ..",
        "build:all": "npm run build:renderer && npm run build:web",
        "watch:renderer": "node build.js --watch",
        "docker:start": "bash docker/scripts/start.sh",
        "docker:stop": "bash docker/scripts/stop.sh",
        "docker:reset": "bash docker/scripts/reset.sh",
        "docker:health": "bash docker/scripts/health-check.sh",
        "deps:check": "node scripts/check-dependencies.js",
        "deps:status": "node scripts/db-status.js",
        "test:integration": "node tests/integration/postgres/connection.test.js && node tests/integration/mysql/connection.test.js && node tests/integration/sqlite/operations.test.js",
        "test:integration:postgres": "node tests/integration/postgres/connection.test.js",
        "test:integration:mysql": "node tests/integration/mysql/connection.test.js",
        "test:integration:sqlite": "node tests/integration/sqlite/operations.test.js",
        "test:all": "npm run test:integration"
    },
    "keywords": [
        "lucide",
        "ai assistant",
        "real-time",
        "live summary",
        "contextual ai",
        "assistant ia"
    ],
    "author": {
        "name": "Pickle Team"
    },
    "license": "GPL-3.0",
    "dependencies": {
        "@anthropic-ai/sdk": "^0.56.0",
        "@deepgram/sdk": "^4.9.1",
        "@firebase/analytics": "^0.10.18",
        "@google/genai": "^1.8.0",
        "@google/generative-ai": "^0.24.1",
        "axios": "^1.10.0",
        "better-sqlite3": "^12.2.0",
        "cors": "^2.8.5",
        "docx": "^9.5.1",
        "dotenv": "^17.0.0",
        "electron-squirrel-startup": "^1.0.1",
        "electron-store": "^8.2.0",
        "electron-updater": "^6.6.2",
        "express": "^4.18.2",
        "firebase": "^12.2.1",
        "firebase-admin": "^13.4.0",
        "jsonwebtoken": "^9.0.2",
        "mammoth": "^1.11.0",
        "marked": "^4.3.0",
        "node-fetch": "^2.7.0",
        "openai": "^4.70.0",
        "pdf-parse": "^2.4.5",
        "pdfkit": "^0.17.2",
        "portkey-ai": "^1.10.1",
        "react-hot-toast": "^2.5.2",
        "sharp": "^0.34.2",
        "validator": "^13.11.0",
        "wait-on": "^8.0.3",
        "ws": "^8.18.0",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@electron/fuses": "^1.8.0",
        "@electron/notarize": "^2.5.0",
        "electron": "^30.5.1",
        "electron-builder": "^26.0.12",
        "electron-rebuild": "^3.2.9",
        "electron-reloader": "^1.2.3",
        "esbuild": "^0.25.5",
        "prettier": "^3.6.2"
    },
    "optionalDependencies": {
        "electron-liquid-glass": "^1.0.1",
        "keytar": "^7.9.0"
    }
}
